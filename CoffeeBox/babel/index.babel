var AddRecipe = React.createClass({
  getInitialState: function() {
    return {
      title: "",
      image: "",
      ingredients: [],
      instructions: []
    };
  },
  getNewRecipe: function() {
    return <Modal />;
  },
  render: function() {
    return (
      <div className="row container-fluid">
        <div className="col-sm-1" />
        <div className="col-sm-10 box" onClick={this.addInfo}>
          <div className="row">
            <i className="fa fa-plus-circle icon" aria-hidden="true" />
            <h4 id="last">Add Recipe</h4>
          </div>
        </div>
        <div className="col-sm-1" />
      </div>
    );
  }
});

var Modal = React.createClass({
  render: function() {
    return (
      <div>
        <div id="addWindow" >
        <form id='form1'>
          <input type="text" id="title" name="title" placeholder="Title..."/><br/>
          <input type="text" id="image" name="image" placeholder="Type image URL..."/><br/>
          <textarea type="text" id="ingredients" name="ingredients" placeholder="Ingredient list..."/><br/>
          <textarea type="text" id="instructions" name="instructions" placeholder="Write instructions..."/>
          </form>
        <div id='buttonGroup'>
          <button className='btn btn-primary btn-block' id='btn1' type="submit" value="Submit" form="form1">Add</button>
          <button className='btn btn-success btn-block' id='btn2'  type="submit" value="Edit" form="form1">Edit</button>
          <button className='btn btn-danger btn-block' id='btn3' type="close" value="Close" form="form1">Close</button>
        </div>
        </div>
      </div>
    );
  }
});

